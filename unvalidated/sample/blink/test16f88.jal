include 16f88
include pic_general


pragma target clock       8_000_000	-- You can also say: 4_000_000, 8_000_000
pragma target OSC         INTOSC_NOCLKOUT          -- high speed external oscillator
pragma target WDT         Disabled

const usart_hw_serial     = true     	-- true = RS232, false = SPI
const serial_hw_baudrate  = 19_200 	-- 1_250_000 (if supported), 57_600, 19_200, 9600, ...

include serial_hardware


-- repl impl.
var byte char
forever loop
	if serial_hw_read(char) then
		serial_hw_write(char)
	end if
end loop

