-- JALV2.4G
-- Blink-a-LED on pin_a0 of PIC16f877a
--
-- fuses specified

include 16f877a                     -- target PICmicro

pragma target clock 20_000_000      -- oscillator frequency
pragma target	OSC	HS 
pragma target	WDT	disabled
pragma target   LVP	disabled


var bit LED is pin_A0    	-- LED is alias for pin_a0, which is now low
LED = off
pin_a0_direction = output	-- pin_a0 is now output

enable_digital_io()          -- disable analog I/O

forever loop
  LED = on                   -- switch LED on
  _usec_delay(250000)        -- spin 1/4 sec.
  LED = off                  -- switch LED off
  _usec_delay(250000)        -- spin 1/4 sec.
end loop
